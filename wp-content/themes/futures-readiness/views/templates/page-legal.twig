{% extends 'templates/page.twig' %}

{% block content %}
	<section class="section">
		<div class="container">
			<div class="legal">
				{% for post in posts %}
					<div class="legal__item">
						<h3>
							{{ post.title }}
						</h3>
						<a class="button"
							href="{{ post.link }}"
							aria-label="Read more about {{ post.title }}">
							Read more
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
