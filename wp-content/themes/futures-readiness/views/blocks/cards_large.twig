<section class="section">
	<div class="container">
		<div class="flex flex-col sm:grid grid-cols-12 gap-6 gap-y-12 lg:gap-12 lg:gap-y-20">
			{% for item in block.cards %}
				<div class="col-span-6">
					{% include 'partials/tease.twig' with {
						title: item.title,
						image: get_image(item.image),
						excerpt: item.description,
						link: item.button.url,
						class: 'large',
						button_text: item.button.title,
						target: item.button.target
					} %}
				</div>
			{% endfor %}
		</div>
	</div>
</section>
