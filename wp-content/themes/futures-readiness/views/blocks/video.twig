{% set section_classes =
	[
		'section',
		block.remove_top_padding ? 'section--no-pt' : null,
		block.remove_bottom_padding ? 'section--no-pb' : null
	]|join(' ')
%}

<section class="{{ section_classes }}">
	<div class="container">
		{% if block.title %}
			<h2>
				{{ block.title }}
			</h2>
		{% endif %}

		{% if block.video_type == 'embed' %}
			<div class="embed-container">
				{{ block.video }}
			</div>
		{% elseif block.video_type == 'file' %}
			{% if block.video_file %}
				<figure>
					<video controls
						width="{{ block.video_file.width }}"
						height="{{ block.video_file.height }}">
						<source src="{{ block.video_file.url }}"
							type="{{ block.video_file.mime_type }}" />Your browser does
						not support the video tag.
					</video>
					{% if block.video_file.caption %}
						<figcaption>
							{{ block.video_file.width }}
						</figcaption>
					{% endif %}
				</figure>
			{% endif %}
		{% endif %}
	</div>
</section>
